<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slam Header"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <ImageView 
            android:id="@+id/image"
            android:src="@drawable/no_user_logo"
            android:layout_width="75dp"
            android:layout_height="100dp"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="name"/>

        <TextView
            android:id="@+id/n_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="nick name" >

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:hint="birthday" />

        <TextView
            android:id="@+id/contact_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="ring me on" />

        <TextView
            android:id="@+id/fbid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="facebook.com/username"
            />

        <TextView
            android:id="@+id/hobby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="hobby" />
         <TextView
            android:id="@+id/drst_frnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="dearest friend" />
          <TextView
            android:id="@+id/fvrt_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="favourite place" />
          <TextView
            android:id="@+id/share_scrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="I share my scrt with" />
          <TextView
            android:id="@+id/i_cant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="I can't live without" />
         <TextView
            android:id="@+id/in_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="I am in love with" />
          <TextView
            android:id="@+id/dream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="dream" />
          <TextView
            android:id="@+id/inspire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="inspired" />
          <TextView
            android:id="@+id/you_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="You are to me" />

          <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="message" />

          <ImageView
              android:id="@+id/Zodaic"
               android:src="@drawable/aries"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
        
    </LinearLayout>
    

</ScrollView>
